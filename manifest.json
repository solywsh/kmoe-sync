{
  "manifest_version": 3,
  "name": "Kmoe Sync",
  "description": "在 kmoe 镜像站收集漫画并同步到 WebDAV。",
  "version": "0.1.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": [
    "https://kxx.moe/*",
    "https://kxo.moe/*",
    "https://mox.moe/*",
    "https://koz.moe/*",
    "https://kox.moe/*",
    "https://kzz.moe/*",
    "http://kxx.moe/*",
    "http://kxo.moe/*",
    "http://mox.moe/*",
    "http://koz.moe/*",
    "http://kox.moe/*",
    "http://kzz.moe/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://kxx.moe/*",
        "https://kxo.moe/*",
        "https://mox.moe/*",
        "https://koz.moe/*",
        "https://kox.moe/*",
        "https://kzz.moe/*",
        "http://kxx.moe/*",
        "http://kxo.moe/*",
        "http://mox.moe/*",
        "http://koz.moe/*",
        "http://kox.moe/*",
        "http://kzz.moe/*"
      ],
      "js": ["scripts/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/*.css", "icons/*.png", "scripts/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
